    "%matplotlib inline\n",
    "import numpy as np\n",
    "import numpy.linalg as la\n"
   ]
  },
  {
   "attachments": {},
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "### 解决线性代数可以用矩阵的形式\n",
    "$$x_1+x_2=5\\\\3x_1+4x_2=6$$"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "array([[-4. ],\n",
       "       [ 4.5]])"
      ]
     },
     "execution_count": 2,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "# 构造等式\n",
    "A = np.array([[1, 2], [3, 4]])\n",
    "B = np.array([[5], [6]])\n",
    "# 求逆矩阵\n",
    "Ainv = la.inv(A)\n",
    "X = Ainv.dot(B)\n",
    "X\n"
   ]
  }
